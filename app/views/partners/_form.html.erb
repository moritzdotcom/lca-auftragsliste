<%= simple_form_for(partner, remote: true, html: {class: 'partner'}) do |f| %>
  <input type="hidden" name="partner[task_id]" value="<%= task.id %>">
  <%= f.input :name, label: 'Name' %>
  <%= f.input :email, label: 'Email' %>
  <%= f.input :phone_number, label: 'Tel.' %>
  <%= f.button :submit, 'Update' %>
<% end %>
