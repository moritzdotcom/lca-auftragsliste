<header>
  <h1><%= @partner.name %></h1>

  <%= simple_form_for @partner, html: {remote: true} do |f| %>
    <%= f.input :email, as: :email, label: 'Email' %>
    <%= f.input :phone_number, label: 'Tel.' %>
    <%= f.button :submit, 'Aktualisieren', disabled: true, id: 'submit-button' %>
  <% end %>
</header>

