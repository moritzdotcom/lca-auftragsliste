<header>
  <h1>Mieter bearbeiten</h1>
  <%= render 'shared/progress_bar', steps: Task.create_steps, step: 1 %>
</header>

<%= simple_form_for @tenant, url: wizard_path, method: :put, defaults: { wrapper_html: {class: 'input-field'} } do |f| %>
  <% if @house_id %>
    <input type="hidden" value="<%= @house_id %>" name="house_id">
  <% end %>
  <%= f.input :name, label: 'Name', error: 'Name muss angegeben werden' %>
  <%= f.input :phone_number, label: 'Telefonnummer' %>

  <%= f.button :submit, 'Weiter' %>
<% end %>

<script>
  function setLabels() {
    document.querySelectorAll('.input').forEach(input => {
      if ((input.querySelector('input') && input.querySelector('input').value) || (input.querySelector('select') && input.querySelector('select').options.selectedIndex != 0) || (input.querySelector('textarea') && input.querySelector('textarea').value)) {
        input.classList.add('has-value')
      }
      else {
        input.classList.remove('has-value')
      }
      input.addEventListener('change', () => {
        if ((input.querySelector('input') && input.querySelector('input').value) || (input.querySelector('select') && input.querySelector('select').options.selectedIndex != 0) || (input.querySelector('textarea') && input.querySelector('textarea').value)) {
          input.classList.add('has-value')
        }
        else {
          input.classList.remove('has-value')
        }
      })
    })
  }

  setLabels()

</script>
