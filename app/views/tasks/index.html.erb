</header>

<table class="task-table">
  <thead>
    <tr>
      <th>Nummer</th>
      <th>Datum</th>
      <th>Objekt</th>
      <th>Adresse</th>
      <th>Wohnung</th>
      <th>Mieter</th>
      <th>Beschreibung</th>
      <th>Ausgestellt von</th>
      <th>Weitergeleitet an</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each_with_index do |task, i| %>
      <tr style="background: <%= (i % 2).zero? ? '#EFEFEF' : '#FFF' %>;">
        <td><%= task.prefix_number %></td>
        <td><%= task.created_at.strftime('%d/%m/%Y') %></td>
        <td><%= task.house.object_number %></td>
        <td><%= task.house.address %></td>
        <td><%= task.flat.location %></td>
        <td><%= task.tenant.name %></td>
        <td><%= task.title %></td>
        <td><%= task.user.abbreviated_name %></td>
        <td><%= task.partner_names %></td>
        <td><%= task.humanized_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

