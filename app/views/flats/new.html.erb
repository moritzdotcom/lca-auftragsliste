  <h1>Neue Wohnung f√ºr <%= @flat.house.address %></h1>
</header>

<%= simple_form_for [@house, @flat], defaults: { wrapper_html: {class: 'input-field'} } do |f| %>
  <%= f.input :house_id, as: :hidden, wrapper_html: {class: ''} %>
  <%= f.input :location, label: 'Bezeichnung', error: 'Bezeichnung muss angegeben werden' %>

  <%= f.button :submit, 'Fertig' %>
<% end %>

<script>
  function setLabels() {
    document.querySelectorAll('.input').forEach(input => {
      if ((input.querySelector('input') && input.querySelector('input').value) || (input.querySelector('select') && input.querySelector('select').options.selectedIndex != 0) || (input.querySelector('textarea') && input.querySelector('textarea').value)) {
        input.classList.add('has-value')
      }
      else {
        input.classList.remove('has-value')
      }
      input.addEventListener('change', () => {
        if ((input.querySelector('input') && input.querySelector('input').value) || (input.querySelector('select') && input.querySelector('select').options.selectedIndex != 0) || (input.querySelector('textarea') && input.querySelector('textarea').value)) {
          input.classList.add('has-value')
        }
        else {
          input.classList.remove('has-value')
        }
      })
    })
  }

  setLabels()

</script>
